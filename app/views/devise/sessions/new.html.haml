- content_for :breadcrumbs do
  %ol.breadcrumb
    %li
      = link_to root_path do
        = fa_icon 'home'
    %li.active
      Sign In

.row
  .col-md-3
  .col-md-6
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Sign In

      .panel-body
        = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :wrapper => :horizontal_form, :wrapper_mappings => { :boolean => :horizontal_boolean }, :html => { :class => 'form-horizontal', :role => 'form' }) do |f|
          = f.input :login, :required => false, :autofocus => :true
          = f.input :password, :required => false
          = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?

          .form-group
            .col-sm-offset-3.col-sm-9
              = f.button :submit, 'Sign in', :class => 'btn-primary'
              = link_to 'Forgot your password?', new_password_path(resource_name), class: 'btn btn-link'
