- content_for :breadcrumbs do
  %ol.breadcrumb
    %li
      = link_to root_path do
        = fa_icon 'home'
    %li.active
      Sign Up

.row
  .col-md-3
  .col-md-6
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Sign Up

      .panel-body
        = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :wrapper => :horizontal_form, :wrapper_mappings => { :boolean => :horizontal_boolean }, :html => { :class => 'form-horizontal', :role => 'form' }) do |f|
          = f.input :username, :required => true, :autofocus => :true
          = f.input :email, :required => true
          = f.input :password, :required => true
          = f.input :password_confirmation, :required => true

          .form-group
            .col-sm-offset-3.col-sm-9
              = f.button :submit, 'Sign Up', :class => 'btn-primary'
