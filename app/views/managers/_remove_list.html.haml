.remove-list
  - if @group.users.any?
    .panel.panel-danger
      .panel-heading
        .panel-title Remove Managers
      .panel-body
        %ul.list-group
          - @group.users.each do |user|
            %li.list-group-item
              = user.username
              .btn-group.pull-right
                = link_to add_manager_group_path(current_group, user), class: 'btn btn-sm btn-danger', data: { method: 'delete', remote: true } do
                  = fa_icon 'ban', text: 'Delete'