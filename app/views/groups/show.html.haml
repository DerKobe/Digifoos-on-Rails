- set_meta_tags title: current_group.name

- content_for :breadcrumbs do
  #header.row
    .col-md-12
      %ol.breadcrumb
        %li
          = link_to fa_icon('home'), root_path
        %li.active
          = current_group.name

- content_for :navbar do
  %li
    %a(href="#")
      = fa_icon 'cog'
      &nbsp;
      Manage Players

  %li
    %a(href="#")
      = fa_icon 'stop'
      &nbsp;
      Game Over

  %li
    %a(data-method="POST"){ href: create_game_group_path(@group) }
      = fa_icon 'play'
      &nbsp;
      Start New Game

.row
  .col-md-7
    = render file: 'games/index'

  .col-md-5
    = render file: 'players/index'