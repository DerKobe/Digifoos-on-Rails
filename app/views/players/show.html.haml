- set_meta_tags title: @group.name

- render 'groups/default_navbar'

- content_for :breadcrumbs do
  %ol.breadcrumb
    %li
      = link_to fa_icon('home'), root_path
    %li.active
      = link_to current_group.name, group_path(current_group)
    %li.active
      = @player.name

#player
  .row
    .col-md-12
      %h1
        .badge.plain
          = @player.name

        -#.badge.alert-info
          %span.title Position
          = 1

        .badge.alert-info
          %span.title Score
          = PlayersService.get_score_for @player

        -#.badge.alert-success
          %span.title Games Won
          12

        -#.badge.alert-danger
          %span.title Games Lost
          12

        -#.badge.plain
          %span.title Buddy FTW
          = player_link 1

        -#.badge.plain
          %span.title Big Spoon
          = player_link 2

        -#.badge.plain
          %span.title Little Spoon
          = player_link 3

    -#.col-md-12
      %canvas#player-chart(width="700" height="400")