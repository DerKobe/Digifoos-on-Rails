%navbar.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{ :type => 'button', :data => { :toggle => 'collapse', :target => '#bs-example-navbar-collapse-1' }}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      - if current_group.present?
        = link_to current_group.name, group_path(current_group), :class => 'navbar-brand'
      - else
        = link_to 'Digifoos', root_path, :class => 'navbar-brand'

    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        = yield :navbar

      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li.dropdown
            %a.dropdown-toggle{ :href => '#', :data => { :toggle => 'dropdown' }}
              = gravatar_image_tag(current_user.email,
                  :alt => current_user.username,
                  :class => 'avatar',
                  :gravatar => { :filetype => 'png', :size => 32 })
              = truncate current_user.username
              %b.caret

            %ul.dropdown-menu
              %li
                = link_to edit_registration_path(current_user) do
                  = fa_icon 'user'
                  = "Edit #{User.model_name.human}"
              %li.divider
              %li
                = link_to destroy_user_session_path, :method => :delete do
                  = fa_icon 'sign-in'
                  Sign out

        - else
          %li
            = link_to new_user_session_path do
              = fa_icon 'sign-out'
              Sign in
          %li
            = link_to new_user_registration_path do
              = fa_icon 'plus-circle'
              Sign up