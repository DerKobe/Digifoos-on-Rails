.games
  .open-game
    = render "games/#{@game.try(:status) || 'start' }_game"

  - if @games.any?
    .all-games
      %table.table.table-striped
        %tbody
          - @games.each do |game|
            - game.teams.order('teams.id ASC').tap do |team|
              %tr
                %td.team
                  %span.player><= player_link team[0].players.first
                  ,&nbsp;
                  %span.player><= player_link team[0].players.last
                %td.score
                  %span{ class: winner_loser_class(team[0]) }><= fa_icon 'star'
                  .label.alert-info><= team[0].goals
                  %span><= ':'
                  .label.alert-info><= team[1].goals
                  %span{ class: winner_loser_class(team[1]) }><= fa_icon 'star'
                %td.team
                  %span.player><= player_link team[1].players.first
                  ,&nbsp;
                  %span.player><= player_link team[1].players.last

      = paginate @games

  - else
    .alert.alert-warning
      No games found.