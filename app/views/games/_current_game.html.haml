.current-game
  .row
    .goals.col-md-12
      = "#{@current_game.goals_team1} : #{@current_game.goals_team2}"

  .row
    .team1.team.col-xs-5
      %a(href="#")= @current_game.player1.name
      %a(href="#")= @current_game.player2.name
    .vs.col-xs-2
      .label.label-danger
        vs
    .team2.team.col-xs-5
      %a(href="#")= @current_game.player3.name
      %a(href="#")= @current_game.player4.name

- if can? :update, @current_game
  .current-game-control
    .row
      .team1.col-xs-5
        .btn-group
          %a.btn.btn-lg.btn-success(href="#")= fa_icon 'plus'
          %a.btn.btn-lg.btn-danger(href="#")= fa_icon 'minus'
      .col-xs-2
      .team2.col-xs-5
        .btn-group
          %a.btn.btn-lg.btn-danger(href="#")= fa_icon 'minus'
          %a.btn.btn-lg.btn-success(href="#")= fa_icon 'plus'
